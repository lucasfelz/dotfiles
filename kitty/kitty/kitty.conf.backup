# Kitty Terminal - Neon Cyan Theme
# Inspirado no logo Arch do wallpaper

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# CORES NEON CYAN
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Cores principais
foreground #00F5FF
background #0a0e14
selection_foreground #0a0e14
selection_background #00F5FF

# Cursor neon cyan brilhante
cursor #00F5FF
cursor_text_color #0a0e14

# URL hover
url_color #00D9FF

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# PALETA DE CORES (Neon Cyan Gradient)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Cores normais
color0  #0a0e14
color1  #FF0080
color2  #00F5FF
color3  #00D9FF
color4  #00BFFF
color5  #00A8E8
color6  #0090D9
color7  #00F5FF

# Cores brilhantes
color8  #1a1f29
color9  #FF1493
color10 #00FFFF
color11 #00E5FF
color12 #00CFFF
color13 #00B8FF
color14 #00A0E8
color15 #FFFFFF

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# TRANSPARÊNCIA E BLUR
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Transparência (85% opaco = 15% transparente)
background_opacity 0.85

# Blur (efeito glassmorphism)
background_blur 20

# Tint (leve azul)
background_tint 0.1

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# FONTE
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

font_family      JetBrainsMono Nerd Font Mono
bold_font        auto
italic_font      auto
bold_italic_font auto
font_size 12.0

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
