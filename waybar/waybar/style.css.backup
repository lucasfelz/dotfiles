/* Waybar v0.12.0 */

@define-color modules_background #1a1b26;

@define-color workspaces_button_off #565f89;
@define-color workspaces_button_on #c0caf5;

@define-color spotify_idle #9ece6a;
@define-color spotify_hover #73daca;

@define-color tray_menu #1a1b26;
@define-color tray_menu_border #414868;
@define-color tray_menu_item #a9b1d6;
@define-color tray_menu_item_hover #c0caf5;
@define-color tray_menu_item_hover_background #24283b;

@define-color clock_idle #a9b1d6;
@define-color clock_hover #7aa2f7;

@define-color weather_idle #7dcfff;
@define-color weather_hover #2ac3de;

@define-color temperature_idle #ff9e64;
@define-color temperature_hover #e0af68;

@define-color brightness_idle #ff9e64;
@define-color brightness_hover #e0af68;

@define-color sound_idle #e0af68;
@define-color sound_hover #ff9e64;

@define-color bluetooth_idle #7aa2f7;
@define-color bluetooth_hover #7dcfff;

@define-color network_idle #7aa2f7;
@define-color network_hover #7dcfff;

@define-color power_idle #f7768e;
@define-color power_hover #db4b4b;

@define-color tooltip_background #1a1b26;
@define-color tooltip_text #a9b1d6;

/*----------------*/
/*-----GLOBAL-----*/
/*----------------*/

* {
  font-family: "Monaspace Neon Frozen", "JetBrainsMono Nerd Font";
  font-weight: 600;
  font-size: 16px;
}

#waybar {
  background-color: @modules_background;
}

/*--------------------*/
/*-----WORKSPACES-----*/
/*--------------------*/

#workspaces {
  margin-left: 6px;
  margin-right: 16px;
}

#workspaces button {
  color: @workspaces_button_off;

  margin: 0px;
  padding: 0px;

  transition: all 0.3s ease;
}

#workspaces button.active {
  color: @workspaces_button_on;

  transition: all 0.3s ease;
}

#workspaces button:hover {
  background: none;

  color: @workspaces_button_on;

  box-shadow: none;
  text-shadow: none;
  transition: none;
  border-color: transparent;

  transition: all 0.3s ease;
}

/*-----------------*/
/*-----SPOTIFY-----*/
/*-----------------*/

#custom-spotify {
  color: @spotify_idle;

  margin-right: 16px;

  transition: all 0.3s ease;
}

#custom-spotify:hover {
  color: @spotify_hover;

  transition: all 0.3s ease;
}

#tray menu {
  background-color: @tray_menu;
  border: 2px solid @tray_menu_border;
}

#tray menu menuitem {
  color: @tray_menu_item;
}

#tray menu menuitem:hover {
  color: @tray_menu_item_hover;
  background-color: @tray_menu_item_hover_background;
}

/*---------------*/
/*-----CLOCK-----*/
/*---------------*/

#clock {
  color: @clock_idle;

  margin-right: 16px;

  transition: all 0.3s ease;
}

#clock:hover {
  color: @clock_hover;

  transition: all 0.3s ease;
}

/*-----------------*/
/*-----WEATHER-----*/
/*-----------------*/

#custom-weather {
  color: @weather_idle;

  transition: all 0.3s ease;
}

#custom-weather:hover {
  color: @weather_hover;

  transition: all 0.3s ease;
}

/*----------------------------------*/
/*-----WL-GAMMARELAY-TEMPERATURE-----*/
/*----------------------------------*/

#custom-wl-gammarelay-temperature {
  color: @temperature_idle;

  margin-right: 12px;

  transition: all 0.3s ease;
}

#custom-wl-gammarelay-temperature:hover {
  color: @temperature_hover;

  transition: all 0.3s ease;
}

/*----------------------------------*/
/*-----WL-GAMMARELAY-BRIGHTNESS-----*/
/*----------------------------------*/

#custom-wl-gammarelay-brightness {
  color: @brightness_idle;

  margin-right: 12px;

  transition: all 0.3s ease;
}

#custom-wl-gammarelay-brightness:hover {
  color: @brightness_hover;

  transition: all 0.3s ease;
}

/*---------------------*/
/*-----WIREPLUMBER-----*/
/*---------------------*/

#custom-wireplumber {
  color: @sound_idle;

  margin-right: 16px;

  transition: all 0.3s ease;
}

#custom-wireplumber:hover {
  color: @sound_hover;

  transition: all 0.3s ease;
}

/*-------------------*/
/*-----GROUP END-----*/
/*-------------------*/

#group-end {
  margin-right: 16px;
}

/*-------------------*/
/*-----BLUETOOTH-----*/
/*-------------------*/

#bluetooth {
  color: @bluetooth_idle;

  margin-right: 12px;

  transition: all 0.3s ease;
}

#bluetooth.off {
  transition: all 0.3s ease;
}

#bluetooth:hover {
  color: @bluetooth_hover;

  transition: all 0.3s ease;
}

/*-----------------*/
/*-----NETWORK-----*/
/*-----------------*/

#network {
  color: @network_idle;

  transition: all 0.3s ease;
}

#network:hover {
  color: @network_hover;

  transition: all 0.3s ease;
}

/*---------------*/
/*-----POWER-----*/
/*---------------*/

#custom-power,
#custom-lock,
#custom-reboot {
  color: @power_idle;

  transition: all 0.3s ease;
}

#custom-power {
  padding-right: 12px;
}

#custom-reboot {
  padding-right: 12px;
}

#custom-lock {
  padding-right: 12px;
}

#custom-power:hover,
#custom-lock:hover,
#custom-reboot:hover {
  color: @power_hover;

  transition: all 0.3s ease;
}

/*-----------------*/
/*-----TOOLTIP-----*/
/*-----------------*/

tooltip {
  background-color: @tooltip_background;
}

tooltip label {
  color: @tooltip_text;
}
